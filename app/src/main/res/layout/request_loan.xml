<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myaccount">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/Request_Loan"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"></View>

        <LinearLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scaleType="fitXY"
            android:background="@color/header_color">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="4.25"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Thierry Jeans"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Outstanding Credit (RWF) :"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/loanoutstanding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:layout_marginLeft="1dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Current Balance (RWF)   :"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/accountbal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Current Eligibility (RWF) :"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/usercredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="5000"
                        android:layout_marginLeft="4dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"></View>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="168dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:background="@drawable/border">



        <ScrollView
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@string/New_Loan_Request"
                    android:layout_gravity="start"
                    android:textColor="@color/myaccount"
                    android:layout_marginLeft="3dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/view_line"></View>

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000 RWF"
                        android:scaleX=".89"
                        android:scaleY=".89"
                        android:id="@+id/five"
                        android:checked="false"
                        android:textSize="19sp"
                        android:paddingRight="50dp"
                        android:textColor="@color/myaccount"
                        android:button="@drawable/custom_radio_button"
                        android:drawablePadding="50dp"
                        android:paddingLeft="10dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ten"
                        android:text="10000 RWF"
                        android:scaleX=".89"
                        android:scaleY=".89"
                        android:checked="false"
                        android:textSize="19sp"
                        android:paddingRight="50dp"
                        android:textColor="@color/myaccount"
                        android:button="@drawable/custom_radio_button"
                        android:drawablePadding="50dp"
                        android:paddingLeft="10dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/twenty"
                        android:text="20000 RWF"
                        android:scaleX=".89"
                        android:scaleY=".89"
                        android:checked="false"
                        android:textSize="19sp"
                        android:paddingRight="50dp"
                        android:textColor="@color/myaccount"
                        android:button="@drawable/custom_radio_button"
                        android:drawablePadding="50dp"
                        android:paddingLeft="10dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fifty"
                        android:text="50000 RWF"
                        android:scaleX=".89"
                        android:scaleY=".89"
                        android:checked="false"
                        android:textSize="19sp"
                        android:paddingRight="50dp"
                        android:textColor="@color/myaccount"
                        android:button="@drawable/custom_radio_button"
                        android:drawablePadding="50dp"
                        android:paddingLeft="10dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/onelikh"
                        android:text="100000 RWF"
                        android:scaleX=".89"
                        android:scaleY=".89"
                        android:checked="false"
                        android:textSize="19sp"
                        android:paddingRight="50dp"
                        android:textColor="@color/myaccount"
                        android:button="@drawable/custom_radio_button"
                        android:drawablePadding="50dp"
                        android:paddingLeft="10dp"/>

                </RadioGroup>

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="@string/confirm"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/custombutton"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</FrameLayout>