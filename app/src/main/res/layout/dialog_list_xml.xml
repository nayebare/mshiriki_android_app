<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alertbackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/listHead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/walletBalancebackground"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/confirmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Bonquet"
                android:textColor="@color/customAlerttitle"
                android:textSize="@dimen/cstmdialogtitlesiz"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="@dimen/homeZpslayArrow"
                android:layout_height="@dimen/homeZpslayArrow"
                android:layout_alignParentRight="true"
                android:alpha=".5"
                android:src="@drawable/cross" />
        </RelativeLayout>

        <ListView
            android:id="@+id/dialogList"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>