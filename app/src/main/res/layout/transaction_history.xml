<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myaccount"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:text="@string/Transaction_History"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trxn_dates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"

                android:gravity="center">

                <ImageView
                    android:id="@+id/dateshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:src="@drawable/calendar" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:orientation="horizontal"
            android:padding="@dimen/fragmenttxnheadpadding"
            android:weightSum="4">


            <TextView
                android:id="@+id/tv_transaction_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1.73"
                android:text="@string/Transaction_Detail"
                android:textColor="@color/white"
                android:textSize="@dimen/fragmenttxnheadtextsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.50"
                android:text="@string/Providers"
                android:textColor="@color/white"
                android:textSize="@dimen/fragmenttxnheadtextsize"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_transaction_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".77"
                android:gravity="end"
                android:text="@string/Amount_txt1"
                android:textColor="@color/white"
                android:textSize="@dimen/fragmenttxnheadtextsize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/list_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noTxns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:divider="@color/dividerclr"
                    android:dividerHeight="1dp"></ListView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="#E86024"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/accountbal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" Account Balance : 0.00 "
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
