<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/alertbackground">

    <LinearLayout
        android:id="@+id/iconbackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/walletBalancebackground"
        android:orientation="vertical"
        android:padding="@dimen/dialogpadding">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="M-SHIRIKI"
            android:textSize="20sp"
            android:textColor="@color/buttonText"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dialogpadding"
            android:layout_marginBottom="@dimen/confirmtextmrgnbtm"
            android:lines="2"
            android:text=""
            android:textColor="@color/alertMsg"
            android:textSize="@dimen/dialogtextsiz"
            android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirmlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/confirmbox"
            android:layout_marginLeft="@dimen/fragmenttextpadding"
            android:layout_marginRight="@dimen/fragmenttextpadding"
            android:layout_marginBottom="@dimen/dialogpadding"
            android:visibility="gone">

        <TextView
            android:id="@+id/confirmtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:lines="2"
            android:text=":::::"
            android:textColor="@color/alertMsg"
            android:textSize="@dimen/dialogtextsiz"/>
            </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alert_dialog" />
    <Button
        android:id="@+id/btn_dialogOK"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragmentbuttonheight"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dialogpadding"
        android:layout_marginLeft="@dimen/fragmentbuttonpadding"
        android:layout_marginRight="@dimen/fragmentbuttonpadding"
        android:layout_marginTop="@dimen/dialogpadding"
        android:background="@drawable/custombutton"
        android:paddingBottom="@dimen/dialogbtnpaddimgtop"
        android:paddingTop="@dimen/dialogbtnpaddimgtop"
        android:text="OK"
        android:textColor="@color/buttonText"
        android:textSize="@dimen/dialogbtnsiz" />
    </LinearLayout>




