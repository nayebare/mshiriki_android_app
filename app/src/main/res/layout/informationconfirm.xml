<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alertbackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/iconbackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/walletBalancebackground"
        android:orientation="vertical"
        android:padding="@dimen/dialogpadding">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirmation"
            android:textColor="@color/buttonText"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/confomation"
            android:text=""
            android:textColor="@color/alertMsg"
            android:textSize="@dimen/dialogtextsiz" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirmlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:padding="@dimen/confomation"
            android:textColor="@color/alertMsg"
            android:textSize="@dimen/dialogtextsiz" />
    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <!--<TextView-->
    <!--android:gravity="center"-->
    <!--android:padding="@dimen/dialogpadding"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textColor="@color/alertMsg"-->
    <!--android:textSize="@dimen/dialogtextsiz"-->
    <!--android:text="@string/payamount"-->
    <!--android:textStyle="bold"/>-->
    <!--</LinearLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alert_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/fragmentbuttonheight"
            android:layout_marginBottom="@dimen/dialogpadding"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/dialogpadding"
            android:layout_weight=".50"
            android:background="@drawable/custombutton"
            android:text="Ok"
            android:textColor="@color/buttonText" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/fragmentbuttonheight"
            android:layout_marginBottom="@dimen/dialogpadding"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/dialogpadding"
            android:layout_weight=".50"
            android:background="@drawable/custombutton"
            android:text="Cancel"
            android:textColor="@color/buttonText" />
    </LinearLayout>
</LinearLayout>
